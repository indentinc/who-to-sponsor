{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "lodash"],
    "lib": ["es2017", "dom"],
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib"]
}
